{
    "builders": [{
        "name": "parallels",
        "type": "parallels-iso",
        "iso_url": "boot2docker.iso",
        "iso_checksum": "3d8b8fe5e89637eab45be550799c1a8a",
        "iso_checksum_type": "md5",
        "boot_wait": "5s",
        "ssh_username": "docker",
        "ssh_password": "tcuser",
        "shutdown_command": "sudo poweroff",
        "guest_os_type": "linux-2.6",
        "prlctl": [
            ["set", "{{.Name}}", "--memsize", "512"]
        ],
        "parallels_tools_mode": "disable"
    }],

    "provisioners": [{
        "type": "shell",
        "inline": [ "mkfs.ext4 -F -L boot2docker-data /dev/sda" ]
    }],

    "post-processors": [{
        "type": "vagrant",
        "include": [ "boot2docker.iso" ],
        "vagrantfile_template": "vagrantfile.tpl",
        "output": "boot2docker-{{.Provider}}.box"
    }]
}

